          <div class="form-group">
            <label for="text" class="col-sm-2 control-label">
              Text
            </label>
            <div class="col-sm-10">
              <textarea id="text" name="text" placeholder="Text" class="form-control" rows="3"><%= @answer.text %></textarea>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <input type="submit" value="Update Answer" class="btn btn-primary">
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
