<% if @answer.errors.any? %>
  <% @answer.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h1>Edit Answer #<%= @answer.id %></h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_answer/<%= @answer.id %>" class="form-horizontal">
      <!-- Label and input for text -->
      <div class="form-group">
        <label for="text" class="col-sm-2 control-label">
          Text
        </label>
        <div class="col-sm-10">
          <textarea id="text" name="text" placeholder="Text" class="form-control" rows="3"><%= @answer.text %></textarea>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Update Answer" class="btn btn-primary">
        </div>
      </div>
    </form>
  </div>
</div>

<div class="row">
  <div class="col-md-offset-3 col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Answer #<%= @answer.id %></h3>
      </div>
      <div class="panel-body">
        <form action="/update_answer/<%= @answer.id %>" class="form-horizontal">
