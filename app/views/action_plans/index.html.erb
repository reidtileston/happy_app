<div class="page-header">
  <h1>Action plans</h1>
</div>

<p><a href="/action_plans/new" class="btn btn-primary">Add a New Action Plan</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>User</th>
      <th>Message</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @action_plans.each do |action_plan| %>
      <tr>
        <td><%= action_plan.user_id %></td>
        <td><%= action_plan.message %></td>
        <td>
          <a href="/action_plans/<%= action_plan.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/action_plans/<%= action_plan.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_action_plan/<%= action_plan.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

