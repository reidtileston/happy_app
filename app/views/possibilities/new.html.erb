<% if @possibility.errors.any? %>
  <% @possibility.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h1>Add Possibility</h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_possibility" class="form-horizontal">
      <!-- Label and input for answer_id -->
      <div class="form-group">
        <label for="answer_id" class="col-sm-2 control-label">
          Answer
        </label>
        <div class="col-sm-10">
          <%= select_tag(:answer_id, options_from_collection_for_select(Answer.all, :id, :text), :class => "form-control") %>
        </div>
      </div>

      <!-- Label and input for video_id -->
      <div class="form-group">
        <label for="video_id" class="col-sm-2 control-label">
          Video
        </label>
        <div class="col-sm-10">
           <%= select_tag(:link_id, options_from_collection_for_select(Link.all, :id, :video), :class => "form-control") %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Create Possibility" class="btn btn-primary">
        </div>
      </div>
    </form>
  </div>
</div>

