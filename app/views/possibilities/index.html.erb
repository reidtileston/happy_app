<div class="page-header">
  <h1>Possibilities</h1>
</div>

<p><a href="/possibilities/new" class="btn btn-primary">Add a New Possibility</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Answer</th>
      <th>Link</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @possibilities.each do |possibility| %>
      <tr>
        <td><%= possibility.answer.text %></td>
        <td><%= possibility.link.video %></td>
        <td>
          <a href="/possibilities/<%= possibility.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/possibilities/<%= possibility.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_possibility/<%= possibility.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

