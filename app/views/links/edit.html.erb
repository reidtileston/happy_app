<% if @link.errors.any? %>
  <% @link.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h1>Edit Link #<%= @link.id %></h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_link/<%= @link.id %>" class="form-horizontal">
      <!-- Label and input for video -->
      <div class="form-group">
        <label for="video" class="col-sm-2 control-label">
          Video
        </label>
        <div class="col-sm-10">
          <input type="text" id="video" name="video" placeholder="Video" class="form-control" value="<%= @link.video %>">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Update Link" class="btn btn-primary">
        </div>
      </div>
    </form>
  </div>
</div>

<div class="row">
