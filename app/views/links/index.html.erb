<div class="page-header">
  <h1>Links</h1>
</div>

<p><a href="/links/new" class="btn btn-primary">Add a New Link</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Video</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @links.each do |link| %>
      <tr>
        <td><%= link.video %></td>
        <td>
          <a href="/links/<%= link.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/links/<%= link.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_link/<%= link.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

